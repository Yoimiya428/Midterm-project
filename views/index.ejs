  <h1>Select from our Menu</h1>
  <ul>
    <% if (menu && menu.length > 0) { %>
      <% for (const item of menu) { %>

        <li><%= item.name %>
          <img src="<%= item.photo_url%>" style="max-width: 100px; max-height: 100px;">
