<body style="background-color:lightgrey;">
  <header class="header-add-new-menu-item">Tom Hortin - Admin</header>
  <div class="menu-container" id="menu-items-list">
    <div id="admin_div">
      <h3 id="menu-title">Menu</h3>
      <h4><a href="/admin" class="add-button" id="add-new-menu">Add New Menu Item</a></h34>
    </div>
      <% if (menu && menu.length > 0) { %>
          <% for (const item of menu) { %>
              <div class="food-item">
                  <div class="food-item-details">
                    <h3><%= item.name %>
                      <img src="<%= item.photo_url%>" style="max-width: 100px; max-height: 100px;"> &nbsp &nbsp <%= item.price %>
                      <h3>
                    <p class="description"><%= item.description %> </p>
                  </div>
                  <div class="menu-item-actions">
                      <button class="edit-button" onclick="window.location.href='/admin/menu/update/<%= item.id %>'">Edit</button>
                      <button class="delete-button" onclick="deleteItem('<%= item.id %>')">Delete</button>
                  </div>
              </div>
          <% } %>
      <% } else { %>
          <p>No menu items to display</p>
      <% } %>
  </div>
</body>
